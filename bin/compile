#!/bin/sh

set -ex

BUILD_DIR=$1
APT_DIR=$BUILD_DIR/.apt
VENDOR_DIR="$BUILD_DIR/vendor"
mkdir -p $VENDOR_DIR
INSTALL_DIR="$VENDOR_DIR/libreoffice"
mkdir -p $INSTALL_DIR
CACHE_DIR=$2 # the contents of CACHE_DIR are persisted between builds

# libreoffice
if [ -f $BUILD_DIR/LibreOfficeAppImage ] ; then
    DOWNLOAD=$(grep http $BUILD_DIR/LibreOfficeAppImage | head -n 1)
else
    # DOWNLOAD="https://libreoffice.soluzioniopen.com/stable/standard/LibreOffice-fresh.standard-x86_64.AppImage"
    DOWNLOAD="https://libreoffice.soluzioniopen.com/stable/fresh/LibreOffice-fresh.basic-x86_64.AppImage"
fi
VERSION=$(echo $DOWNLOAD | grep -Poi "(?<=LibreOffice-)[^/]+(?=\.AppImage)")
VERSION=${VERSION:-default} # avoid empty version if the grep fails to match
FILE_NAME=LibreOffice-${VERSION}.AppImage

mkdir -p $CACHE_DIR
if ! [ -e $CACHE_DIR/$FILE_NAME ]; then
  echo "-----> downloading LibreOffice AppImage"
  curl -L $DOWNLOAD > $CACHE_DIR/$FILE_NAME

  echo "-----> extracting LibreOffice from AppImage archive"
  cd $CACHE_DIR
  chmod a+x $FILE_NAME
  ./$FILE_NAME --appimage-extract
  mv squashfs-root "libreoffice-${VERSION}"
else
  echo "file already exists $CACHE_DIR/$FILE_NAME"
fi

cp -R $CACHE_DIR/libreoffice-${VERSION}/usr $INSTALL_DIR
cp -R $CACHE_DIR/libreoffice-${VERSION}/opt $INSTALL_DIR

PROFILE_PATH="$BUILD_DIR/.profile.d/libreoffice.sh"
ACTUAL_INSTALL_PATH="$HOME/vendor/libreoffice"
mkdir -p $(dirname $PROFILE_PATH)
INSTALLED_VERSION=$(ls $INSTALL_DIR/opt)
echo "export PATH=$ACTUAL_INSTALL_PATH/opt/$INSTALLED_VERSION/program:\$PATH" >> $PROFILE_PATH
echo "export OFFICE_PATH=$ACTUAL_INSTALL_PATH/opt/$INSTALLED_VERSION" >> $PROFILE_PATH
# Optimize slug size
echo "Remove unused files/dirs"
rm -rf $ACTUAL_INSTALL_PATH/$INSTALLED_VERSION/help
rm -rf $ACTUAL_INSTALL_PATH/$INSTALLED_VERSION/readmes
rm -rf $ACTUAL_INSTALL_PATH/$INSTALLED_VERSION/share/extensions
rm -rf $ACTUAL_INSTALL_PATH/$INSTALLED_VERSION/share/gallery
rm -rf $ACTUAL_INSTALL_PATH/$INSTALLED_VERSION/share/wizards
rm -rf $ACTUAL_INSTALL_PATH/$INSTALLED_VERSION/share/template

# Copy libreoffice settings
mkdir -p /usr/lib/libreoffice/share/registry/data
cp ./registrymodifications.xcu /usr/lib/libreoffice/share/registry/data/registrymodifications-system-wide.xcu


du -ha --max-depth 2 /app | sort -hr